@model IEnumerable<Inscripciones.Models.Carrera>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de carreras</h1>

<p>
    <a asp-action="Create">Crear nueva carrera</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
     <a asp-controller="AnioCarreras" asp-action="IndexPorCarrera" asp-route-idcarrera="@item.Id">Años</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
        
    </tbody>
</table>
<a asp-controller="Home" asp-action="Index">Volver</a>
